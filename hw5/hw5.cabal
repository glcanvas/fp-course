category:             Web
build-type:           Simple
extra-source-files:   README.md
cabal-version:        >=1.10
tested-with:          GHC == 8.0.1


library
  exposed-modules:    Block1
                      , Block5
  other-modules:      Paths_hw5
  hs-source-dirs:     src
  build-depends:      base >=4.7 && <5
                      , mtl
                      , containers
                      , lens
