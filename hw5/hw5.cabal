executable hw5-exe
  main-is:            Main.hs
  other-modules:      Paths_hw5
  hs-source-dirs:     app
  ghc-options:        -Wall -threaded -rtsopts -with-rtsopts=-N6
  build-depends:      base >=4.7 && <5
                      , hw5
  default-language:   Haskell2010

test-suite hw5-test
  type:               exitcode-stdio-1.0
  main-is:            Main.hs
  other-modules:      Block5Test
  hs-source-dirs:     test
  ghc-options:        -Wall -threaded -rtsopts -with-rtsopts=-N6
  build-depends:      base >=4.7 && <5
                      , hw5
                      , hspec
  default-language:   Haskell2010
